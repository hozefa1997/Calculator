<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hozefa.calculator.MainActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="468dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/n2"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Enter the first number :"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/res"
            android:layout_below="@+id/n1"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Enter the second number :"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="79dp" />

        <EditText
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/n2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:hint="Result"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="143dp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sub"
            android:layout_alignBottom="@+id/sub"
            android:layout_alignStart="@+id/div"
            android:text="Addition"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mult"
            android:layout_alignStart="@+id/mult"
            android:layout_marginBottom="31dp"
            android:text="subtraction"
            tools:layout_editor_absoluteX="233dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mult"
            android:layout_alignBottom="@+id/mult"
            android:layout_alignStart="@+id/res"
            android:text="division"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="317dp" />

        <Button
            android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reset"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="21dp"
            android:text="Multiplication"
            tools:layout_editor_absoluteX="233dp"
            tools:layout_editor_absoluteY="317dp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="reset"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="402dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
